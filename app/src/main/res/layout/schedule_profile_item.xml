<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:background="@color/background"
        android:textColor="#ff1919"
        android:textSize="24dp"
        android:typeface="serif"
        android:id="@+id/textViewScheduleTimeofProfile"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <View
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/textViewScheduleTimeofProfile"
        android:id="@+id/view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/background"
        android:textColor="@color/blue"
        android:textSize="24dp"
        android:typeface="serif"
        android:id="@+id/textViewProfileScheduleName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/view" />

    <ToggleButton
        android:id="@+id/toggleScheduleProfileStatus"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>